.container {
    position: relative;
    height: 100%;
    width: 100%;
    box-sizing: border-box;
    z-index: 10;
}
/* <!-- 地图容器 --> */
.map {
    position: fixed;
    width: 100%;
    height: 100%;
    /* background-color: wheat; */
    z-index: -1;
}

.map-android {
    position: fixed;
    width: 78%;
    height: 55%;
    /* background-color: wheat; */
    top:17%;
    left:5%;
    z-index: -1;    
}

/* <!-- 精灵容器 --> */
#sprite {
    position: fixed;
    width: 1rpx;
    height: 1rpx;
    z-index: 0;
}

/* 正上方搜索框 包括上下留白 16% */
.search {
    position: absolute;
    top: 9%;
    left: 50%;
    transform: translate(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
    height: 5%;
    width: 95%;
    margin: 0 auto;
    border: 2rpx solid gainsboro;
    background-color: rgba(255, 255, 255, 0.9);
    color: #aaa;
    border-radius: 10rpx;
    z-index: 10;
}

.search .weui-icon {
    margin-bottom: 4px;
}

.search:nth-child(2) {
    color: #ccc;
}

/* <!-- 起点 终点 容器 16%--> */
.navigator {
    display: flex;
    position: absolute;
    left: 50%;
    transform: translate(-50%);
    top: 68rpx;
    padding-top: 1rpx;
    width: 95%;
    height: 12%;
    /* background-color: rgba(43, 54, 73, 0.5); */
    background-color: rgba(255, 255, 255, 0.8);
    z-index: 10;
    /* opacity: 90%; */
}

.point-container {
    display: flex;
    height: 98%;
    width: 88%;
    margin-bottom: 1%;
    /* background-color: rgb(254, 255, 255); */
}

.point-box {
    display: flex;
    flex-direction: column;
    width: 100%;
    /* background-color: rgb(254, 255, 255); */
    border-radius: 15rpx;
    overflow: hidden;
}

.startPoint,
.endPoint {
    display: flex;
    align-items: center;
    height: 50%;
    /* background-color: rgb(246, 247, 248); */
}

.startPoint {
    border-bottom: 1rpx solid rgba(240, 240, 240, 1);
}

.roundIcon {
    margin: 0 20rpx;
    height: 20rpx;
    width: 20rpx;
    background: #ffffff;
    border-radius: 50%;
}

.green {
    border: 5rpx solid rgb(133, 212, 166);
}

.red {
    border: 5rpx solid rgb(220, 95, 90);
}

.navigator-back,
.switch {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 12%;
}

/* .switch {
    background-color: rgb(246, 247, 248); 
} */

.switch .weui-icon {
    transform: rotate(90deg);
    margin-right: 60rpx;
}

/* <!-- 导航提示 16%--> */
.navigating-info {
    display: flex;
    position: absolute;
    justify-content: center;
    align-items: center;
    top: 4%;
    left: 2%;
    padding-top: 1rpx;
    width: 96%;
    height: 12%;
    background-color: rgba(43, 54, 73, 0.9);
    border-radius: 20rpx;
    z-index: 10;
}

.nav-text {
    width: 80%;
    font-size: x-large;
    text-align: center;
    color: #fff;
}

/* <!-- 右侧楼层容器 --> */
.floor-container {
    position: absolute;
    overflow: hidden;
    top: 25%;
    display: flex;
    flex-direction: column;
    align-items: center;
    right: 5%;
    width: 8%;
    /* height: 50%; */
    background-color: rgb(243, 255, 255, 0.9);
    border: 2rpx solid #ccc;
    border-radius: 40rpx;
    box-shadow: 0 2rpx 4rpx 2rpx #dddddd;
    z-index: 10;
}

.floor-item {
    width: 50rpx;
    height: 50rpx;
    margin: 5rpx 0;
    border-bottom: 2rpx solid #ccc;
}

.floor-item:last-child {
    border-bottom: 0;
}

.floor-space {
    width: 15rpx;
    height: 15rpx;
}

/* <!-- 右下角指南针 > */
.compass {
    position: absolute;
    /* top: 15%; */
    /* left: 3%; */
    bottom: 16.5%;
    right: 5%;
    /* background-color: turquoise; */
    transition: transform 0.5s;
    z-index: 10;
}
.compass span{    
    color:#000; 
    font-size:100rpx;
    /* box-shadow:  1rpx 1rpx 1rpx rgb(98,165,220); */
    /* border: 1rpx solid rgb(98,165,220); */
    border-radius:  50%;
}

/* <!-- 左下角定位  --> */
.myLocation {
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    bottom: 19%;
    left: 3%;
    box-sizing: border-box;
    width: 80rpx;
    height: 80rpx;
    color:rgb(98,165,220);
    background-color:rgba(254, 254, 255, 0.9);
    border-radius: 10rpx;
    padding: 10rpx;
    box-shadow: 1rpx 1rpx 1rpx 1rpx #ccc;
    z-index: 10;
}
.myLocation span{
    font-size:50rpx;
}

/* <!-- 选择的地点提示信息 20% --> */
.point-info,
.navigating-simu,
.navigating-end {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: absolute;
    bottom: 2.5%;
    left: 2%;
    width: 96%;
    height: 14%;
    /* font-size: x-large; */
    background-color: rgba(254, 254, 255, 0.9);
    /* opacity: 90%; */
    border-radius: 10rpx;
    border: 2rpx solid rgb(141, 200, 245);
    /* border-bottom: 0; */
    box-shadow: 0 2rpx 4rpx 2rpx #dddddd;
    z-index: 10;
}

.currentPoint {
    display: flex;
    justify-content: center;
    align-items: center;
    /* padding-left: 30%; */
    height: 54%;
    width: 100%;
    border-bottom: 1rpx solid #ccc;
}

.currentPoint text:first-child {
    font-size: 45rpx;
    /* height: 55%; */
}

#navigating-btn-go {
    background-color: #fff;
    color: rgb(72, 131, 246);
    margin-left: 85rpx;
    border: 5rpx solid rgb(72, 131, 246);
}

.settingBox {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 46%;
    width: 100%;
}

.settingBox view {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 50%;
    font-size: 28rpx;
    /* flex: 1; */
}

.settingBox view:nth-child(-n + 2) {
    width: 50%;
    border-right: 1rpx solid #ccc;
}

/* <!-- 开始导航、模拟导航 结束导航--> */
.navigating-simu,
.navigating-end {
    flex-direction: row;
    height: 14%;
}

.detail-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 70%;
}

.detail-info text:nth-child(-n + 2) {
    display: inline-block;
    height: 20%;
    width: 80%;
    font-size: 30rpx;
    text-align: center;
    font-weight: bold;
}

.detail-info text:last-child {
    display: inline-block;
    height: 10%;
    width: 80%;
    border-top: 2rpx solid #ccc;
    text-align: center;
    font-size: 25rpx;
    color: #555;
}

.navigating-btnBox {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 30%;
}

#navigating-btn-start {
    background-color: rgb(72, 131, 246);
    color: #fff;
}

#navigating-btn-simu {
    margin-top: 3%;
    background-color: #fff;
    border: 1rpx solid rgb(72, 131, 246);
    color: rgb(72, 131, 246);
}

.navigating-end button {
    background-color: rgb(224, 83, 65);
    /* border:5rpx solid rgb(224,83,65); */
    color: #fff;
}

.btn-hover {
    position: relative;
    top: 3rpx;
    left: 3rpx;
    opacity: 0.9;
    transform: scale(0.95, 0.95);
}

/* logo */
.logo {
    position: absolute;
    bottom: 6%;
    right: 4%;
    width: 80rpx;
    height: 80rpx;
    z-index: 1;
}
