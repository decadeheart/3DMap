.container {
    position: relative;
    height: 100%;
    width: 100%;
    box-sizing: border-box;
}

/* <!-- 地图容器 --> */
#map {
    position: absolute;
    width: 100%;
    height: 100%;
    /* background-color: wheat; */
    z-index: 0;
}

/* 正上方搜索框 包括上下留白 16% */
.search {
    position: absolute;
    top: 3%;
    left: 50%;
    transform: translate(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
    height: 7.5%;
    width: 90%;
    margin: 0 auto;
    border: 2rpx solid gainsboro;
    background-color: #fff;
    border-radius: 10rpx;
    z-index: 10;
}

.search .weui-icon {
    margin-bottom: 4px;
}

.search:nth-child(2) {
    color: #ccc;
}

/* <!-- 起点 终点 容器 16%--> */
.navigator {
    display: flex;
    position: absolute;
    top: 0;
    padding-top: 1rpx;
    width: 100%;
    height: 16%;
    background-color: rgb(254, 255, 255);
    z-index: 10;
}

.point-container {
    display: flex;
    height: 98%;
    width: 88%;
    margin-bottom: 1%;
    background-color: rgb(254, 255, 255);
}

.point-box {
    display: flex;
    flex-direction: column;
    width: 100%;
    background-color: rgb(254, 255, 255);
    border-radius: 15rpx;
    overflow: hidden;
}

.startPoint,
.endPoint {
    display: flex;
    align-items: center;
    height: 50%;
    background-color: rgb(246, 247, 248);
}

.startPoint {
    border-bottom: 1rpx solid rgba(240, 240, 240, 1);
}

.roundIcon {
    margin: 0 20rpx;
    height: 20rpx;
    width: 20rpx;
    background: #ffffff;
    border-radius: 50%;
}

.green {
    border: 5rpx solid rgb(133, 212, 166);
}

.red {
    border: 5rpx solid rgb(220, 95, 90);
}

.navigator-back,
.switch {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 12%;
}

.switch {
    background-color: rgb(246, 247, 248);
}

.switch .weui-icon {
    transform: rotate(90deg);
    margin-right: 60rpx;
}

/* <!-- 导航提示 16%--> */
.navigating-info {
    display: flex;
    position: absolute;
    justify-content: center;
    align-items: center;
    top: 2%;
    left: 2%;
    padding-top: 1rpx;
    width: 96%;
    height: 16%;
    background-color: rgb(43, 54, 73);
    border-radius: 20rpx;
    z-index: 10;
}

.nav-text {
    width: 80%;
    font-size: x-large;
    text-align: center;
    color: #fff;
}

/* <!-- 右侧楼层容器 --> */
.floor-container {
    position: absolute;
    overflow: hidden;
    top: 25%;
    display: flex;
    flex-direction: column;
    align-items: center;
    right: 5%;
    width: 8%;
    /* height: 50%; */
    background-color: rgb(243, 255, 255);
    border: 2rpx solid #ccc;
    border-radius: 40rpx;
    box-shadow: 0 2rpx 4rpx 2rpx #dddddd;
    z-index: 10;
}

.floor-item {
    width: 50rpx;
    height: 50rpx;
    margin: 5rpx 0;
    border-bottom: 2rpx solid #ccc;
}

.floor-item:last-child {
    border-bottom: 0;
}

.floor-space {
    width: 15rpx;
    height: 15rpx;
}

/* <!-- 左上角指南针 10%--> */
.compass {
    position: absolute;
    top: 20%;
    height: 9%;
    background-color: turquoise;
    z-index: 10;
}

/* <!-- 左下角定位 9% --> */
.myLocation {
    position: absolute;
    bottom: 14%;
    left: 2%;
    height: 8%;
    /* background-color: #fff; */
    z-index: 10;
}

/* <!-- 选择的地点提示信息 20% --> */
.point-info,
.navigating-simu,
.navigating-end {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: absolute;
    bottom: 0;
    left: 2%;
    width: 96%;
    height: 16%;
    font-size: x-large;
    background-color: rgb(254, 254, 255);
    border-radius: 10rpx;
    border: 2rpx solid rgb(141, 200, 245);
    /* border-bottom: 0; */
    box-shadow: 0 2rpx 4rpx 2rpx #dddddd;
    z-index: 10;
}

.currentPoint {
    display: flex;
    justify-content:center;
    align-items: center;
    /* padding-left: 30%; */
    height: 58%;
    width: 100%;
    border-bottom: 1rpx solid #ccc;
}
.currentPoint text:first-child{
    font-size: 45rpx;
    /* height: 55%; */
}

#navigating-btn-go {
    background-color: #fff;
    color: rgb(72, 131, 246);
    margin-left: 85rpx;
    border:5rpx solid rgb(72, 131, 246);
}

.settingBox {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 42%;
    width: 100%;
}

.settingBox view {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 50%;
    font-size: 28rpx;
    /* flex: 1; */
}

.settingBox view:nth-child(-n+2){
    width: 50%;
    border-right: 1rpx solid #ccc;
}

/* <!-- 开始导航、模拟导航 结束导航--> */
.navigating-simu,
.navigating-end {
    flex-direction: row;
    height: 14%;
}

.detail-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 60%;
}

.detail-info text:first-child {
    display: inline-block;
    height: 60%;
    width: 80%;
    font-size: x-large;
    text-align: center;

}

.detail-info text:nth-child(2) {
    display: inline-block;
    height: 40%;
    width: 80%;
    border-top: 2rpx solid #ccc;
    text-align: center;
    font-size: small;
    color: #555;
}

.navigating-btnBox {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 40%;
}

#navigating-btn-start {
    background-color: rgb(72, 131, 246);
    color: #fff;
}

#navigating-btn-simu {
    margin-top: 3%;
    background-color: #fff;
    border: 1rpx solid rgb(72, 131, 246);
    color: rgb(72, 131, 246);
}

.navigating-end button {
    background-color: rgb(224, 83, 65);
    /* border:5rpx solid rgb(224,83,65); */
    color: #fff;
}

.btn-hover {
    position: relative;
    top: 3rpx;
    left: 3rpx;
    opacity: 0.9;
    transform: scale(0.95, 0.95);

}

/* logo */
.logo {
    position: absolute;
    bottom: 6%;
    right: 4%;
    width: 80rpx;
    height: 80rpx;
    z-index: 1;
}